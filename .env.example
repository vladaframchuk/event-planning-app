DJANGO_SECRET_KEY=change-me
DEBUG=0
ALLOWED_HOSTS=event-planning-app.ru,www.event-planning-app.ru,localhost
CORS_ALLOWED_ORIGINS=https://event-planning-app.ru
CSRF_TRUSTED_ORIGINS=https://event-planning-app.ru
TIME_ZONE=Europe/Moscow
USE_X_FORWARDED_HOST=1
SECURE_SSL_REDIRECT=1
STATIC_ROOT=/app/static
MEDIA_ROOT=/app/media

POSTGRES_DB=event_planning
POSTGRES_USER=event_planning
POSTGRES_PASSWORD=strong-password
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_TIMEZONE=Europe/Moscow
USE_REDIS_CHANNEL_LAYER=1
USE_REDIS_CACHE=1

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yandex.ru
EMAIL_PORT=465
EMAIL_USE_SSL=1
EMAIL_USE_TLS=0
EMAIL_HOST_USER=notify@event-planning-app.ru
EMAIL_HOST_PASSWORD=replace-with-yandex-app-password
DEFAULT_FROM_EMAIL=Event Planning App <notify@event-planning-app.ru>

SITE_URL=https://event-planning-app.ru
SITE_FRONT_URL=${SITE_URL}
NEXT_PUBLIC_API_URL=${SITE_URL}
NEXT_PUBLIC_BACKEND_URL=${SITE_URL}
NEXT_PUBLIC_WS_URL=wss://event-planning-app.ru/ws
NODE_ENV=production
REGISTRY_IMAGE_PREFIX=ghcr.io/OWNER/REPOSITORY
BACKEND_TAG=latest
FRONTEND_TAG=latest

CERTBOT_EMAIL=devops@event-planning-app.ru
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me-strong
