{
  "id": null,
  "uid": "cadvisor-containers",
  "title": "cAdvisor Containers",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Container CPU Usage",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{image!=\"\",name=~\"$container\"}[5m]) * 100",
          "legendFormat": "{{name}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Container Memory Usage",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=~\"$container\",image!=\"\"}",
          "legendFormat": "{{name}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "container",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "refresh": 1,
        "definition": "label_values(container_cpu_usage_seconds_total{image!=\"\"}, name)",
        "multi": true,
        "includeAll": true,
        "current": {
          "selected": false,
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  }
}
